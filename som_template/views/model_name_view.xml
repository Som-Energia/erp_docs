<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Vistres, accions i entrada de menú d'un nou model-->
        <!-- Vista de formulari -->
        <record id="model_name_view_form" model="ir.ui.view">
            <field name="name">model.name.view.form</field>
            <field name="model">model.name</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="My Data">
                    <group name="data">
                        <field name="name" />
                        <field name="active" />
                    </group>
                </form>
            </field>
        </record>
        <!-- Vista del llistat -->
        <record id="model_name_view_tree" model="ir.ui.view">
            <field name="name">model.name.view.tree</field>
            <field name="model">model.name</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="My Datas">
                    <field name="name" select="1"/>
                    <field name="active" select="2"/>
                </tree>
            </field>
        </record>
        <!-- Acció d'obrir el llistat -->
        <record id="model_name_action" model="ir.actions.act_window">
            <field name="name">My Datas</field>
            <field name="res_model">model.name</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="model_name_view_tree"/>
        </record>
        <!-- Entrada de menú de l'obertura del llisatat -->
        <menuitem id="menu_model_name_action"
            action="som_consulta_pobresa_draft_action"
            parent="base.menu_management"/>
        <!-- Afegim el llistat en un altre model -->
        <record id="action_model_name_from_users" model="ir.actions.act_window">
            <field name="name">Consulta model name</field>
            <field name="res_model">model.name</field>
            <field name="src_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'active_test': False}</field>
        </record>


        <!-- Herència: Afegir camps d'un model existent -->
        <record id="name_of_view" model="ir.ui.view">
            <field name="name">My view description</field>
            <field name="model">model.name</field>
            <field name="inherit_id" ref="othermodule.name_of_view"/>
            <field name="arch" type="xml">
                <!-- My view modifications -->
                <!-- <xpath expr="//field[@name['derp']]" position="after"> -->
            </field>
        </record>
    </data>
</openerp>
